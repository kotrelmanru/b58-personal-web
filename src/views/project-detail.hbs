<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detail Project</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .project-header { background: white; padding: 30px 0; text-align: center;
      } .project-title { font-size: 2.5rem; font-weight: bold; margin-bottom:
      20px; } .project-info { margin-top: 40px; } .project-img { max-height:
      400px; object-fit: cover; width: 100%; border-radius: 10px; box-shadow:
      0px 4px 12px rgba(0, 0, 0, 0.1); } .tech-list span { background-color:
      #6c757d; color: white; border-radius: 5px; padding: 6px 12px;
      margin-right: 8px; font-size: 0.9rem; }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/"><img
            src="../assets/icon/dumb.png"
            style="height: 25px"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/project">Add Project</a></li>
          </ul>
          <button
            class="btn btn-dark ml-auto"
            onclick="window.location.href='contact'"
          >Contact Me</button>
        </div>
      </div>
    </nav>

    <!-- Header -->
    <div class="project-header">
      <h1 class="project-title">{{project.project_name}}</h1>
    </div>

    <!-- Detail Section -->
    <div class="container project-info">
      <div class="row">
        <!-- Gambar Proyek -->
        <div class="col-md-6 mb-4">
          <img
            src="{{project.image}}"
            alt="Project Image"
            class="project-img"
            id="project-image"
          />
        </div>
        <!-- Detail Proyek -->
        <div class="col-md-6">
          <div class="mt-4">
            <h6 class="fw-bold">Durasi:</h6>
            <p>{{formatDate project.start_date}}
              -
              {{formatDate project.end_date}}</p>

          </div>
          <div class="mt-4">
            <h6 class="fw-bold">Lama Durasi:</h6>
            <p>{{calculateDuration project.start_date project.end_date}}
              bulan</p>
          </div>
          <div class="mt-4">
            <h6 class="fw-bold">Teknologi yang Digunakan:</h6>
            <div class="tech-list" id="project-technologies">
              {{#each project.technologies}}
                <span>{{this}}</span>
              {{/each}}
            </div>
          </div>
        </div>
      </div>

      <!-- Description Section -->
      <div class="row mt-5">
        <div class="col-12">
          <h5>Deskripsi Proyek:</h5>
          <div class="project-description" id="project-description">
            <p>{{project.description}}</p>
          </div>
        </div>
      </div>

      <!-- Button Navigasi -->
      <div class="text-center mt-5">
        <a href="/project" class="btn btn-primary">Kembali ke Daftar Proyek</a>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>